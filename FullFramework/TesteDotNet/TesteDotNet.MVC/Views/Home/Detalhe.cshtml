@model TesteDotNet.Core.Models.ItemModel
@{
    ViewBag.Title = "Detalhe";
}
<h3 class="page-header">Detalhe do Item</h3>

<div class="row">
    <div class="form-group col-md-8">
        <label for="campo1">Nome:</label>
        @Html.DisplayFor(m => m.Nome, Model.Nome)
    </div>

    <div class="form-group col-md-8">
        <label for="campo2">Descrição:</label>
        @Html.DisplayFor(m => m.Descricao, Model.Descricao)
    </div>

    <div class="form-group col-md-6">
        <label for="campo3">Categoria:</label>
        @Html.DisplayFor(m => m.Categoria, Model.Categoria)
    </div>
</div>

<hr />
<div id="actions" class="row">
    <div class="col-md-12">
        <a href="/Home/Index" class="btn btn-default">Voltar</a>
    </div>
</div>